<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.BrandedLaunch" parent="AppTheme">
        <item name="android:windowBackground">@drawable/imgur_background</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="secondaryTextStyle">
        <item name="android:textColor">@color/secondaryTextColor</item>
        <item name="android:textSize">@dimen/secondaryTextSize</item>
        <item name="android:fontFamily">@font/muli_regular</item>
    </style>

    <style name="primaryTextStyle">
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textSize">@dimen/primaryTextSize</item>
        <item name="android:fontFamily">@font/muli_light</item>
    </style>

    <style name="headingTextStyle">
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textSize">@dimen/headingTextSize</item>
        <item name="android:fontFamily">@font/muli_semi_bold</item>
    </style>

    <style name="commentTextStyle">

        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textSize">@dimen/commentTextSize</item>
        <item name="android:fontFamily">@font/muli_light</item>
    </style>

    <style name="commentLikesTextStyle" parent="commentTextStyle">
        <item name="android:textColor">@color/secondaryTextColor</item>
        <item name="android:textSize">@dimen/commentTextSize</item>
    </style>

    <style name="commentAuthorTextStyle">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/muli_semi_bold</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>
</resources>
